<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark">


    <LinearLayout
        android:id="@+id/non_empty_widget_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_nutellaPie"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="@dimen/small_text_size"
                tools:text="Nutella Pie"
                android:textStyle="bold"/>


            <Button android:id="@+id/button_brownies"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                tools:text="Brownies"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:fontFamily="casual"
                />

            <Button android:id="@+id/button_yellowCake"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                tools:text="Yellow Cake"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button_cheeseCake"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                tools:text="Cheese Cake" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_widget_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Loading content..."
            android:padding="@dimen/normal_padding"
            android:textAlignment="center"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/widget_progress_bar"
            android:layout_width="@dimen/progressBar"
            android:layout_height="@dimen/progressBar"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <GridView
            android:id="@+id/widget_grid_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:numColumns="1"
            android:visibility="visible"/>

    </LinearLayout>
</RelativeLayout>