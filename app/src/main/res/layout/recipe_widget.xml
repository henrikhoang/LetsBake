<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/empty_widget_layout"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            tools:text="Click this button to add recipes"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Add Recipe"
            android:textAllCaps="true"
            android:fontFamily="casual"
            android:background="@color/chocolate"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/non_empty_widget_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_nutellaPie"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="10sp"
                tools:text="Nutella Pie"
                android:textStyle="bold"/>


            <Button android:id="@+id/button_brownies"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                tools:text="Brownies"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                />

            <Button android:id="@+id/button_yellowCake"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                tools:text="Yellow Cake"
                android:textSize="10sp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/button_cheeseCake"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="Cheese Cake" />

        </LinearLayout>

        <GridView
            android:id="@+id/widget_grid_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:gravity="center"
            android:numColumns="1" />

    </LinearLayout>
</FrameLayout>